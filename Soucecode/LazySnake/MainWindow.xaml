<Window x:Class="LazySnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazySnake"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Game">
                <MenuItem Header="_Load Map"/>
                <MenuItem Header="_Create Map" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Border CornerRadius="0" BorderBrush="#FF034719" Background="LightGray" BorderThickness="1" Margin="20">
            <Canvas x:Name="canvasGameMap" Height="300" Width="500" Background="#FFD1E2CA" Margin="0"/>
        </Border>
    </StackPanel>
</Window>
