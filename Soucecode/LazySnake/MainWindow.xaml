<Window x:Class="LazySnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazySnake"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Name="stackPanelGameMap">

        </StackPanel>
        <Label>Click to begin</Label>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnStart" Width="150" Margin="5" Visibility="Hidden" Click="btnStart_Click">Start</Button>
            <Button Name="btnStop" Width="150" Margin="5" Visibility="Hidden" Click="btnStop_Click">Stop</Button>
        </StackPanel>
    </StackPanel>
</Window>
