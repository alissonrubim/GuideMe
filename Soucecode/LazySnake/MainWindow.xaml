<Window x:Class="LazySnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazySnake"
        mc:Ignorable="d"
        Title="MainWindow" Height="794.735" Width="1285.964" Loaded="Window_Loaded">
    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Game">
                <MenuItem Header="_Load Map"/>
                <MenuItem Header="_Create Map" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Border CornerRadius="0" BorderBrush="#FF034719" Background="LightGray" BorderThickness="1" Margin="2,2,2,2" Height="735">
            <Canvas x:Name="canvasGameMap" Background="#FFE6E6E6" Margin="0,0,0,0"/>
        </Border>
    </StackPanel>
</Window>
