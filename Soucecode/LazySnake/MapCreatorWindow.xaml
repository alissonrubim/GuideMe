<Window x:Class="LazySnake.MapCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazySnake"
        mc:Ignorable="d"
        Title="MapCreatorWindow" Height="600" Width="800">
    <StackPanel Margin="0,0,0,19" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <StackPanel Orientation="Horizontal" Height="46">
            <TextBox x:Name="textBox_Copy" Height="23" TextWrapping="Wrap" Text="10" Margin="19,0,0,0" HorizontalAlignment="Left" Width="50"/>
            <Label Content="x" VerticalAlignment="Center"></Label>
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="10" Margin="0,0,0,0" HorizontalAlignment="Left" Width="50"/>
            <Button Margin="19,0,0,0">Block</Button>
            <Button Margin="19,0,0,0" >Player</Button>
            <Button Margin="19,0,0,0">Target</Button>
        </StackPanel>
        <Canvas x:Name="canvasGameMaker" Background="#FF838383" Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="503" Width="700"/>
    </StackPanel>
</Window>
